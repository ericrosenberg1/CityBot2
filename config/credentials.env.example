# Basic Configuration
CITY_NAME=ventura

# Update Intervals (in seconds)
WEATHER_UPDATE_INTERVAL=21600  # 6 hours
WEATHER_ALERT_INTERVAL=900     # 15 minutes
EARTHQUAKE_CHECK_INTERVAL=300  # 5 minutes
NEWS_CHECK_INTERVAL=1800      # 30 minutes
MAINTENANCE_INTERVAL=86400    # 24 hours

# Twitter Configuration
TWITTER_ENABLED=true
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_token_secret_here
TWITTER_POSTS_PER_HOUR=10
TWITTER_POSTS_PER_DAY=24
TWITTER_MINIMUM_INTERVAL=300

# Bluesky Configuration
BLUESKY_ENABLED=true
BLUESKY_HANDLE=your_handle.bsky.social
BLUESKY_PASSWORD=your_password_here
BLUESKY_POSTS_PER_HOUR=10
BLUESKY_POSTS_PER_DAY=24
BLUESKY_MINIMUM_INTERVAL=300

# Facebook Configuration
FACEBOOK_ENABLED=true
FACEBOOK_PAGE_ID=your_page_id_here
FACEBOOK_ACCESS_TOKEN=your_access_token_here
FACEBOOK_POSTS_PER_HOUR=10
FACEBOOK_POSTS_PER_DAY=24
FACEBOOK_MINIMUM_INTERVAL=300

# LinkedIn Configuration
LINKEDIN_ENABLED=true
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_access_token_here
LINKEDIN_POSTS_PER_HOUR=10
LINKEDIN_POSTS_PER_DAY=24
LINKEDIN_MINIMUM_INTERVAL=300

# Reddit Configuration
REDDIT_ENABLED=true
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USERNAME=your_username_here
REDDIT_PASSWORD=your_password_here
REDDIT_POSTS_PER_HOUR=10
REDDIT_POSTS_PER_DAY=24
REDDIT_MINIMUM_INTERVAL=300
REDDIT_SUBREDDITS=ventura,venturacounty,venturaevents

# Weather Configuration
RADAR_ZOOM_LEVEL=8
RADAR_CENTER_LAT=34.2805
RADAR_CENTER_LON=-119.2945

# Database Configuration
DATABASE_URL=sqlite:///data/citybot.db

# Cache Settings
CACHE_RETENTION_DAYS=7
MAP_CACHE_MAX_AGE=604800  # 7 days in seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/citybot.log

# News Filter Settings
NEWS_RELEVANCE_THRESHOLD=0.7
MAX_DAILY_NEWS_POSTS=24

# Earthquake Filter Settings
EARTHQUAKE_MIN_MAGNITUDE=3.0
EARTHQUAKE_RADIUS_MILES=100